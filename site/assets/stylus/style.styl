@import "../../../flex-grid-framework"

/* Colors
_____________________________________________________ */
purple = #441255
magenta = #e22b4b
magenta-dark = #82212b
yellow = #f7cb34
blue = #1fb8c0
code-background = #03001c
pumpkin = #fe9600

/* Mixins
_____________________________________________________ */
shadow()
	-webkit-box-shadow 3px 3px 3px 0px rgba(50, 50, 50, 0.77)
	-moz-box-shadow 3px 3px 3px 0px rgba(50, 50, 50, 0.77)
	box-shadow 3px 3px 3px 0px rgba(50, 50, 50, 0.77)

yellow-bar()
	background-color yellow
	margin-top 5px
	margin-bottom 5px
	height 30px

/* _____________________________________________________ */

bg-dark = #30253d
bg-light = #362a45
bg-half = #332841

body
	font-family 'Open Sans', sans-serif
	background-color:bg-half;
	background-image: linear-gradient(30deg, bg-dark 12%, transparent 12.5%, transparent 87%, bg-dark 87.5%, bg-dark),
	linear-gradient(150deg, bg-dark 12%, transparent 12.5%, transparent 87%, bg-dark 87.5%, bg-dark),
	linear-gradient(30deg, bg-dark 12%, transparent 12.5%, transparent 87%, bg-dark 87.5%, bg-dark),
	linear-gradient(150deg, bg-dark 12%, transparent 12.5%, transparent 87%, bg-dark 87.5%, bg-dark),
	linear-gradient(60deg, bg-light 25%, transparent 25.5%, transparent 75%, bg-light 75%, bg-light),
	linear-gradient(60deg, bg-light 25%, transparent 25.5%, transparent 75%, bg-light 75%, bg-light);
	background-size:80px 140px;
	background-position: 0 0, 0 0, 40px 70px, 40px 70px, 0 0, 40px 70px;

/* header
_____________________________________________________ */
.header-bg
	padding 50px 0

.header
	color #fff
	text-align center
	@extend $col-12

.logo
	width 100%
	max-width 540px
/* Note
_____________________________________________________ */
.note
	background-color yellow
	color #000
	padding 10px 15px
	margin 0 auto
	display block
	shadow()
	width 100%
	max-width 610px

@media (max-width 610px)
	.note
		width 80%
		margin 0 auto

/* title container
_____________________________________________________ */
.title-container
	@extend $col-12
	text-align center

/* headers
_____________________________________________________ */
.title-lv1
	font-size 48px
	margin-top 0
	padding 0 30px

@media (max-width 380px)
	.title-lv1
		padding 0

.title-lv2
	font-size 30px

.title-lv3
	font-size 30px
	color #fff

@media (max-width 600px)
	.title-lv1
		font-size 38px

	.title-lv2
		font-size 25px

	.title-lv3
		font-size 25px

.title-lv4
	font-size 20px
	color #fff
	font-style oblique
	font-weight 700

.yellow
	color yellow

.magenta
	color magenta
/* Other texts
_____________________________________________________ */
.standard-paragraph
	color #fff

/* Links and Btns
_____________________________________________________ */
.link-magenta
	color magenta
	text-decoration none
	-webkit-transition color .5s
	transition color .5s

.link-magenta:hover
	color magenta-dark

.link-white
	color #fff
	text-decoration none
	-webkit-transition color .5s
	transition color .5s

.link-white:hover
	color magenta-dark

.btn
	padding 10px 30px
	color #fff
	background-color magenta
	margin 30px 0 45px 0
	display inline-block
	text-decoration none
	-webkit-transition background-color .5s
	transition background-color .5s

@media (max-width 610px)
	.btn
		display block
		width 200px
		margin 30px auto

.btn:hover
	background-color magenta-dark

/* rows
_____________________________________________________ */
.container
	@extend $row

.demo-row
	background-color magenta
	padding 10px 0
	margin-top 10px
	margin-bottom  50px
	shadow()
	@extend $row

.c-align-left
	@extend $justify-left

.c-align-right
	@extend $justify-right

.c-align-center
	@extend $justify-center

.c-align-between
	@extend $justify-between

.c-align-around
	@extend $justify-around

.v-align-top
	@extend $vertical-align-top

.v-align-middle
	@extend $vertical-align-middle

.v-align-bottom
	@extend $vertical-align-bottom

/* Code block
_____________________________________________________ */

.code
	@extend $col-8
	@extend $offset-2

@media (max-width 600px)
	.code
		mq-col(12)
		mq-offset(0)
		padding 0 10px

.code .pre
	background-color code-background
	color blue
	padding-left 10px
	shadow()

.featured
	color pumpkin

.commented
	color grey

/* Yellow bars
_____________________________________________________ */
.yellow-bar-1
	yellow-bar()
	@extend $col-1

.yellow-bar-2
	yellow-bar()
	@extend $col-2

.yellow-bar-3
	yellow-bar()
	@extend $col-3

.yellow-bar-4
	yellow-bar()
	@extend $col-4

.yellow-bar-5
	yellow-bar()
	@extend $col-5

.yellow-bar-6
	yellow-bar()
	@extend $col-6

.yellow-bar-7
	yellow-bar()
	@extend $col-7

.yellow-bar-8
	yellow-bar()
	@extend $col-8

.yellow-bar-9
	yellow-bar()
	@extend $col-9

.yellow-bar-10
	yellow-bar()
	@extend $col-10

.yellow-bar-11
	yellow-bar()
	@extend $col-11

.yellow-bar-12
	yellow-bar()
	@extend $col-12

.yellow-bar-flex
	yellow-bar()
	@extend $col-flex

.yellow-bar-x
	yellow-bar()
	@extend $col-3
	@extend $offset-3

.yellow-bar-y
	yellow-bar()
	@extend $col-6

@media (max-width 811px)
	.yellow-bar-x
		mq-col(12)
		mq-offset(0)

	.yellow-bar-y
		mq-col(12)

.offset-6
	@extend $offset-6

.offset-7
	@extend $offset-7

.big
	height 90px

/* Footer
_____________________________________________________ */
.footer-container
	background-color magenta
	padding 10px 0
	margin-top 80px
	width 100%

.footer
	@extend $row

.footer-left
	text-align left
	@extend $col-6

.footer-right
	text-align right
	@extend $col-6

@media (max-width 500px)
	.footer-left
		text-align center
		mq-col(12)

	.footer-right
		text-align center
		mq-col(12)
		margin-top 10px
